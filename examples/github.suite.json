[
  {
    "name": "GitHubHATEOSTest",
    "calls": [
      {
        "on": {
          "method": "GET",
          "url": "https://api.github.com/users/kajf",
          "headers": {
            "Accept": "application/json"
          }
        },
        "expect": {
          "statusCode": 200,
          "body": {
            "login": "kajf"
          },
          "bodySchemaFile": "schemas/github-user.schema.json"
        },
        "remember": {
          "body": {
            "repos_url": "repos_url"
          }
        }
      },
      {
        "on": {
          "method": "GET",
          "url": "{repos_url}",
          "headers": {
            "Accept": "application/json"
          }
        },
        "expect": {
          "statusCode": 200,
          "body": {
            "name": "bozr"
          }
        }
      }
    ]
  },
  {
    "name": "Http Cache Test (using remembered header)",
    "calls": [
      {
        "on": {
          "method": "GET",
          "url": "https://api.github.com/users/kajf",
          "headers": {
            "Accept": "application/json"
          }
        },
        "expect": {
          "statusCode": 200,
          "bodySchemaFile": "schemas/github-user.schema.json",
          "body": {
            "login": "kajf"
          }
        },
        "remember": {
          "headers": {
            "modifiedSince": "Last-Modified"
          }
        }
      },
      {
        "on": {
          "method": "GET",
          "url": "https://api.github.com/users/kajf",
          "headers": {
            "Accept": "application/json",
            "If-Modified-Since": "{modifiedSince}"
          }
        },
        "expect": {
          "statusCode": 304
        }
      }
    ]
  }
]